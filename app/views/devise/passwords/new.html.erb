<% content_for :page_title do %>
  <%  "Forgot your password" %>
<% end %>

<div class="container push-top">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Forgot your password?</h2>

        <%= form_for resource, as: resource_name, url: password_path(resource_name),
                      html: { class: "form-horizontal center", method: :post} do |f| %>
                        <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
          </div>


          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
      <br>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
